{
    "extends": [
        "tslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "globals": {
        "angular": false,
        "module": true,
        "document": true,
        "console": true,
        "inject": false,
        "Promise": true
    },
    "env": {
        "browser": true,
        "amd": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": true,
        "no-duplicate-variable": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-irregular-whitespace": true,
        "curly": true,
        "switch-default": true,
        "no-return-await": true,
        "no-unused-vars": [
            "error",
            {
                "ignoreRestSiblings": true
            }
        ],
        "prefer-const": true,
        "prefer-object-spread": true,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}